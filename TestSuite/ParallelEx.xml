<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Parallel Execution" parallel="tests">
    <test thread-count="5" name="Testing on Chrome">
        <parameter name="browser" value="chrome">
        </parameter>
        <classes>
            <class name="ParallelTestExecution.ParallelEx1"/>
            <class name="ParallelTestExecution.ParallelEx2"/>
        </classes>
    </test>

    <test thread-count="5" name="Testing on Safari">
        <parameter name="browser" value="firefox">
        </parameter>
        <classes>
            <class name="ParallelTestExecution.ParallelEx1"/>
            <class name="ParallelTestExecution.ParallelEx2"/>
        </classes>
    </test>
</suite>